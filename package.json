{
  "name": "i-beer",
  "version": "0.0.0",
  "main": "build/src/main.js",
  "description": "A simple API to e-commerce beer",
  "engines": {
    "node": ">= 20.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",

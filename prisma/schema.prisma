// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model category {
  id         String   @unique
  categoryId Int      @id @unique @default(autoincrement())
  name       String
  createdAt  DateTime
  updatedAt  DateTime
  beer       beer[]
}

model beer {
  id          String   @id @unique
  beerId      Int      @unique @default(autoincrement())
  name        String
  description String
  imageUrl    String
  abv         Decimal
  ibu         Int
  ebc         Int
  foodPairing String[]
  brewersTips String
  category    category @relation(fields: [categoryId], references: [categoryId])
  categoryId  Int
  createdAt   DateTime
  updatedAt   DateTime
}

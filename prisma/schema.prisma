// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics", "relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @unique
  name      String
  createdAt DateTime
  updatedAt DateTime
  beer      Beer[]
}

model Beer {
  id          String   @id @unique
  name        String
  description String
  imageUrl    String
  abv         Int
  ibu         Int
  ebc         Int
  foodPairing String[]
  brewersTips String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  createdAt   DateTime
  updatedAt   DateTime
}

enum StatusOrder {
  PENDING
  PAID
  CANCELLED
}

model Order {
  id        String             @id @unique
  price     Float
  status    StatusOrder
  createdAt DateTime
  updatedAt DateTime
  products  ProductsOnOrders[]
}

model Product {
  id        String             @id @unique
  price     Float
  createdAt DateTime
  updatedAt DateTime
  orders    ProductsOnOrders[]
}

model ProductsOnOrders {
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  productId String
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String

  @@id([productId, orderId])
}
